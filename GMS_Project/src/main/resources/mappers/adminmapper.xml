<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="adminMapper">
	<select id="allUserList" resultType="MemberDto">
		SELECT
				*
		FROM
				GALLERY_MEMBER
	</select>
	
	<insert id="categoryadd" parameterType="AdminDto">
		INSERT INTO GALLERY_ADMIN(
			ART_STATUS,
			SHOW_NAME,
			ARTIST,
			START_DATE,
			END_DATE,
			MAIN_ART
		)
		VALUES(
			#{artStatus},
			#{showName},
			#{artist},
			#{startDate},
			#{endDate},
			#{mainArt}
		)
	</insert>
	
	<select id="listCategory" resultType="AdminDto">
		SELECT
				*
		FROM
				GALLERY_ADMIN
	</select>
	
	<select id="selectStatusList" parameterType="String" resultType="AdminDto">
		SELECT
				*
		FROM
				GALLERY_ADMIN
		WHERE
				ART_STATUS = #{artStatus}
		ORDER BY
				END_DATE DESC
	</select>
	
	<delete id="deleteFile" parameterType="String">
		DELETE FROM
				GALLERY_ADMIN
		WHERE
				MAIN_ART = #{mainArt}
	</delete>
</mapper>